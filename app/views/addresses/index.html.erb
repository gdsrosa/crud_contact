<div class="container">
<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Contact</th>
      <th>Action to See</th>
      <th>Action to Update</th>
      <th>Action to Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.contact.name %></td>
        <td><%= link_to 'See More', address, class:"btn btn-success" %></td>
        <td><%= link_to 'Update', edit_address_path(address), class:"btn btn-warning" %></td>
        <td><%= link_to 'Delete', address, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path, class:"btn btn-primary"%> |
<%= link_to 'Back', root_path, class:"btn btn-dark"%>
</div>