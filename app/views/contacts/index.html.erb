<div class="container">
<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Type</th>
      <th>Rmk</th>
      <th>Action to See</th>
      <th>Action to Update</th>
      <th>Action to Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.type.description %></td>
        <td><%= contact.rmk %></td>
        <td><%= link_to 'See More', contact, class:"btn btn-success" %></td>
        <td><%= link_to 'Update', edit_contact_path(contact), class:"btn btn-warning" %></td>
        <td><%= link_to 'Delete', contact, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= paginate @contacts, class:"page-item page-link"%>

<br>

<%= link_to 'New Contact', new_contact_path, class:"btn btn-primary" %> |
<%= link_to 'Back', root_path, class:"btn btn-dark"%>
</div>