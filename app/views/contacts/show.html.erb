<div class="container">
  <p id="notice"><%= notice %></p>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Type</th>
        <th>RMK</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @contact.name %></td>
        <td><%= @contact.email %></td>
        <td><%= @contact.type.description %></td>
        <td><%= @contact.rmk %></td>
        <td><%= link_to 'Update', edit_contact_path(@contact), class:"btn btn-warning" %></td>
      </tr>
    </tbody>
  </table>

  <%= link_to 'Back', contacts_path, class:"btn btn-dark" %>
</div>
