<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Types of contacts</h1>

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Description</th>
        <th>Action To See</th>
        <th>Action To Update</th>
        <th>Action To Delete</th>
      </tr>
    </thead>

    <tbody>
      <% @types.each do |type| %>
        <tr>
          <td><%= type.description %></td>
          <td><%= link_to 'See More', type, class:"btn btn-success" %></td>
          <td><%= link_to 'Update', edit_type_path(type), class:"btn btn-warning" %></td>
          <td><%= link_to 'Delete', type, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Add new type', new_type_path, class:"btn btn-primary" %> | 
  <%= link_to 'Back', root_path, class:"btn btn-dark"%>

</div>